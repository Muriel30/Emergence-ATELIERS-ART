<div class="subtitle">
  <div class="studio media">
    <div class="media-body">
      <h1 class="studio-title">
        <%= @studio.name %>
      </h1>
      <p class="studio-caption"><%= @studio.description %></p>
    </div>
    <div class="media-right">
      <div class="studio-meta">
        <span class="studio-category label label-default">
          <%= @studio.category.name %>
        </span>

        <div class="stars-count poi-rating">
          <% @studio.reviews.average(:rating).to_i.times do %>
            <i class="fa fa-star" aria-hidden="true" style="color: #F29918;"></i>
          <% end %>
          <% (5 - @studio.reviews.average(:rating).to_i).times do %>
            <i class="fa fa-star-o" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-7">
      <div class="reviews">
        <h2 id="review-count">
          <%= pluralize @studio.reviews.size, "review" %>
        </h2>

        <div id="reviews">
          <% if @studio.reviews.blank? %>
            Soyez le premier à laisser un commentaire pour <%= @studio.name %>
          <% else %>
            <% @studio.reviews.each do |review| %>
              <%= render 'reviews/show', review: review %>
            <% end %>
          <% end %>
        </div>

        <%= render 'reviews/form', studio: @studio, review: @review %>
      </div>
    </div>

    <div class="col-sm-5">
      <div id="map" class="poi-map" style="width: 100%; height: 400px;"></div>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>
<p>
  <strong>Nom de l'atelier :</strong>
  <%= @studio.name %>
</p>
<p>
  <strong>Addresse :</strong>
  <%= @studio.address %>
</p>
<p>
  <strong>Description :</strong>
  <%= @studio.description %>
</p>
<p>
  <strong>Modalités d'ouverture :</strong>
  <%= @studio.openings %>
</p>

